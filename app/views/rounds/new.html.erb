<%= link_to 'Back to companies', @company %>

<%= form_for ([@company, @round]) do |f| %>
  <h1>Create A New Round</h1>
  <div class="field">
    <%= f.label :funding_goal %><br>
    <%= f.text_field :funding_goal %><br>
  </div>

  <div class="field">
    <%= f.label :term_sheet %><br>
    <%= f.text_field :term_sheet %><br>
  </div>
  <h3> Due Diligence files </h3>
    <div id="due_diligences">
      <%= f.fields_for :due_diligences do |diligence| %>
       <%= render 'due_diligence_fields', :f => diligence %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add a file', f, :due_diligences  %>
      </div>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
