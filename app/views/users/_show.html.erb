<%= form_for @user, :remote => true do |f| %>
		  <div class="field">
		    <%= f.label :location %>
		    <%= f.text_area :location %>
		  </div>
		  <div class="field">
		    <%= f.label :biography %>
		    <%= f.text_area :biography %>
		  </div>
		   <div class="field">
		    <%= f.label :experience %>
		    <%= f.text_area :experience %>
		  </div>
		  <div class="action">
		    <%= f.submit %>
		  </div>
    <% end %>