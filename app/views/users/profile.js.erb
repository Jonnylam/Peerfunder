//displaying all the edit buttons so user can edit profile

$("#show_edit_button").click(function() {
  $('.edit_button').show();
  $('#cancel_edit_button').show();
  $('#show_edit_button').hide();
});

$('#cancel_edit_button').click(function(){
  $('.edit_button').hide();
  $('#show_edit_button').show();
  $('#cancel_edit_button').hide();
  $('.edit-field').hide();

  //show all html elements after form is hidden
