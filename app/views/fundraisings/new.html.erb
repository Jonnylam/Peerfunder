
  <%= form_for ([@company, @round, @fundraising]) do |f| %>
	<div class = "formtitle">
		<center>Invite your Friends!!</center>
		<br>
	</div>

  <div class="field">
  	<div class = "formlabel">
	    <%= f.label :email%><br>
	    <%= f.text_field :email %><br>
  	</div>
  </div>

	
  <div class="field">
  	<div class = "formlabel">
	    <%= f.label :subject%><br>
	    <%= f.text_field :subject %><br>
  	</div>
  </div>


  <div class="field">
  	<div class = "formlabel">
	    <%= f.label :emailcontent%><br>
	    <%= f.text_area :emailcontent %><br>
  	</div>
  </div>


  <div class="actions">
    <%= f.submit "Send your invites"%>
  </div>
<% end %>

