<html>
  <head>
    <title>Angels North</title>
      <%= stylesheet_link_tag    "application" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
  </head>
  <body>

  <header>
  <%= link_to(image_tag("/angels_north_logo.png", :class => "logo", :alt => "Angels North Logo", :title => "Home"), root_url) %>
    <nav class="group">
      <div id="primary-nav">
        <ul>
          <li class="first"><%= link_to "INVESTORS", investors_path %></li>
          <li><%= link_to "START-UPS", companies_path %></li>
          <% if current_user %>
            <li><%= link_to "REGISTER", new_company_path %></li>
            <li><%= link_to "DASHBOARD", user_path(current_user) %></li>
          <% else %>
            <li><%= link_to "ABOUT US", users_path %></li>
          <% end %>
        </ul>
      </div>
      <div class="login group">
        <ul>
          <% if current_user %>
           <%= link_to users_profile_path do %>
            <li class="user">
              <p class="username"><%= current_user.first_name %></p>
              <%= image_tag("/uploads/user/avatar/#{current_user.id}/thumb_avatar.jpg", :class => "thumbnail", :alt => "logo", :title => "Home") %>

            </li>
            <% end %>
            <li>
              <%= link_to "Logout", :logout, method: :post %>
            </li>
          <% else %>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Login", :login %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </header>

  <!-- <div class="notice">
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div> -->


  <div id="wrapper">

    <%= yield %>
  </div>


    <footer class="group">
    <div class="links">
    <ul>
      <li class="first"><%= link_to "Terms and Conditions", companies_path %></li>
        <li><%= link_to "Privacy", companies_path %></li>
        <li><%= link_to "FAQs", companies_path %></li>
        <li><%= link_to "About Us", companies_path %></li>
        <li><%= link_to "Contact Us", companies_path %></li>
      </ul>
    </div>

    <div class="copyright">
      <img src="/logo_footer.png" alt="" class="logo">
      <p>Angels North</p>
      <p>Copyright &copy; 2015</p>
      </div>
  </footer>

  </body>


</html>
